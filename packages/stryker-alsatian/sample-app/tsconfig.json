{
    "extends": "../../../tsconfig.json",
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "isolatedModules": false,
      "declaration": true,
      "sourceMap": true,
      "noImplicitAny": false,
      "removeComments": true,
      "noLib": false,
      "preserveConstEnums": true,
      "suppressImplicitAnyIndexErrors": true,
      "experimentalDecorators": true,
      "newLine": "LF",
      "emitDecoratorMetadata": true,
      "outDir": "./dist"
    },
    "include": [
       "./src/**/*.ts"
    ]
 }
 